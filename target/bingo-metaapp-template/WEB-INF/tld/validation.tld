<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE taglib PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
	  "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">

<taglib>
	<tlib-version>1.0.0</tlib-version>
	<jsp-version>1.0</jsp-version>
	<short-name>Bingosoft Security</short-name>
	<description>Bingosoft Security Framework Tag Library.</description>

	<tag>
		<name>message</name>
		<tag-class>tag.validation.MessageTag</tag-class>
		<body-content>JSP</body-content>
		<description>显示验证信息 </description>
		<attribute>
			<name>fieldName</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>toolTip</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>required</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
		<attribute>
			<name>rule</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>
	<tag>
		<name>style</name>
		<tag-class>tag.validation.StyleTag</tag-class>
		<body-content>JSP</body-content>
		<description>表单域的样式</description>
		<attribute>
			<name>fieldName</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>
 
</taglib>